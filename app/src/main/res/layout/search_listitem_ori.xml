<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/ori_icon"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="5dp"
        android:id="@+id/ori_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginBottom="3dp"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/icon_cafe"
        android:id="@+id/imageView2"
        android:layout_below="@+id/ori_name"
        android:layout_alignLeft="@+id/ori_name"
        android:layout_alignStart="@+id/ori_name"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="2dp"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/icon_restroom"
        android:layout_below="@+id/ori_name"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:id="@+id/imageView3"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="2dp"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/icon_convenience"
        android:layout_below="@+id/ori_name"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:id="@+id/imageView4"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="2dp"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/icon_restaurant"
        android:layout_below="@+id/ori_name"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:id="@+id/imageView5"
        android:layout_marginBottom="2dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/search_icon"
        android:id="@+id/ori_icon"
        android:layout_marginLeft="12dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp" />

</RelativeLayout>